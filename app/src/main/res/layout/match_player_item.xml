<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="jfutbol.com.jfutbol.SearchPlayer"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/primary"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/playerPhotoID"
            android:layout_weight="0.20"
            android:src="@drawable/default_player"
            android:focusableInTouchMode="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:focusable="false"/>

        <TextView
        android:id="@+id/txtPlayerCompleteNameID"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:textColor="#212121"
        android:layout_toRightOf="@+id/playerPhotoID"
        android:layout_alignParentTop="true"

            android:text="Player Name"
            android:textStyle="bold"

            android:focusable="false"
            android:focusableInTouchMode="false"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Years"
            android:id="@+id/txtAge"
            android:layout_below="@+id/txtPlayerCompleteNameID"
            android:layout_toRightOf="@+id/playerPhotoID"
            android:textSize="13dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/captain"
            android:layout_below="@+id/txtPlayerCompleteNameID"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/status"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/extraPlayer"
            android:layout_below="@+id/txtPlayerCompleteNameID"
            android:layout_alignParentRight="false"
            android:layout_toLeftOf="@+id/status"
            android:layout_marginRight="2dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/status"
            android:layout_below="@+id/txtPlayerCompleteNameID"
            android:layout_alignParentRight="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="position"
            android:id="@+id/txtPosition"
            android:layout_alignParentRight="false"
            android:textStyle="bold"
            android:layout_below="@+id/txtAge"
            android:layout_toRightOf="@+id/playerPhotoID"
            android:textSize="12dp" />
    </RelativeLayout>


